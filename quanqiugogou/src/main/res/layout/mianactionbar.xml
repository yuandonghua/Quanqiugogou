<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
          android:id="@+id/actionbarbg"
   
    android:layout_height="44dp" >
  
<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
      android:background="@android:color/transparent"
         >
         
    <LinearLayout 
 			android:id="@+id/tv_erwei"
          android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
         <ImageView
           
            android:layout_width="20dp"
            android:layout_height="20dp"
          
            android:background="@drawable/erwei1"
            android:adjustViewBounds="true"
           android:clickable="true"
          
            android:textColor="#ffffff"
            android:textSize="12sp" />
         <TextView
               android:id="@+id/textView1"
               android:layout_marginTop="2dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/tv_erwei"
               android:layout_alignParentBottom="true"
               android:text="扫一扫"
               android:textColor="#fff"
               android:textSize="10sp" />
    </LinearLayout>
        <EditText
            android:id="@+id/sousuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_xiaoxi"
            android:layout_toRightOf="@id/tv_erwei"
           android:hint="搜索"
           android:gravity="center"
           android:padding="5dp"
             android:imeOptions="actionSearch"
               android:drawableLeft="@drawable/search2"
            android:textColor="#5c5c5c"
            android:textSize="14sp"
            android:clickable="true"
            android:background="@drawable/input_bg" >

          
        </EditText>

        <LinearLayout
            android:id="@+id/tv_xiaoxi"
            android:layout_width="wrap_content"
              android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_erwei"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/message1"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_xiaoxi"
                android:layout_alignParentBottom="true"
                android:text="消息"
                   android:layout_marginTop="2dp"
                android:textColor="#fff"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>
 
</FrameLayout>